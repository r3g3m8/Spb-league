{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": ["./components/*"],
            "@/styles/*": ["./styles/*"],
            "@/public/*": ["./public/*"],
            "@/lib/*": ["./lib/*"],
            "@/docs/*": ["./docs/*"],
            "@/assets/*": ["./assets/*"],
            "@/data/*": ["./data/*"],
            "@/functions/*": ["./functions/*"],
            "@/types/*": ["./types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
}
